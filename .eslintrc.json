{
  "globals": {
    "db": "readonly",
    "common": "readonly"
  },
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": ["airbnb-base", "plugin:n/recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "strict": ["error", "never"],
    "n/exports-style": ["error", "module.exports"]
  }
}
